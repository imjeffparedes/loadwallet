<?xml version='1.0' encoding='utf-8'?>
<widget id="com.comgtech.loadwalletapp" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Loadwallet</name>
    <description>
         Send load, pay bills, check current wallet balance, view previous transactions and manage account settings for loadwallet retailers.
    </description>
    <author email="dev.comgtech@gmail.com" href="http://comgtech.com">
        Loadwallet Dev Team
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <allow-intent href="market:*" />
    <icon density="ldpi" src="platform/android/app/src/main/res/mipmap-ldpi/ic_launcher.png" />
    <icon density="mdpi" src="platform/android/app/src/main/res/mipmap-mdpi/ic_launcher.png" />
    <icon density="hdpi" src="platform/android/app/src/main/res/mipmap-hdpi/ic_launcher.png" />
    <icon density="xhdpi" src="platform/android/app/src/main/res/mipmap-xhdpi/ic_launcher.png" />
    <icon density="xxhdpi" src="platform/android/app/src/main/res/mipmap-xxhdpi/ic_launcher.png" />
    <icon density="xxxhdpi" src="platform/android/app/src/main/res/mipmap-xxxhdpi/ic_launcher.png" />
    <preference name="loglevel" value="DEBUG" />
    <preference name="android-minSdkVersion" value="14" />
    <preference name="StatusBarOverlaysWebView" value="true" />
    <preference name="StatusBarBackgroundColor" value="#165769" />
    <preference name="StatusBarStyle" value="lightcontent" />
</widget>
